<script>
function bookTransport() {
  alert("Transport Booking Successful!");
}

function chatbotReply() {
  var userInput = document.getElementById("userInput").value.toLowerCase();
  var response = "";

  if (userInput.includes("taj")) {
    response = "The Taj Mahal is located in Agra, Uttar Pradesh.";
  } 
  else if (userInput.includes("goa")) {
    response = "Goa is famous for beaches and nightlife.";
  } 
  else {
    response = "Please ask about Taj Mahal or Goa.";
  }

  document.getElementById("chatResponse").innerText = response;
}
</script>

